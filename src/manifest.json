{
    "name": "__MSG_extensionName__"
  , "description": "__MSG_extensionDescription__"
  , "version": "0.0.2"

  , "developer": {
        "name": "Matt Hensman <m@matt.tf>"
      , "url": "https://github.com/hensm/hide_private_mode"
    }

  , "browser_specific_settings": {
        "gecko": {
            "id": "hide_private_mode@matt.tf"
